<UserControl x:Class="EditorGuiApp.CalendarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorGuiApp"
             mc:Ignorable="d" d:DesignWidth="150" Height="350">
    <GroupBox Header="calendar">
        <StackPanel >
            <Button Name="btnToday" Click="BtnToday_Click" Width="100">Today</Button>
            <Calendar x:Name="calendar" SelectedDatesChanged="Calendar_SelectedDatesChanged" Width="150"/>
            <TextBlock x:Name="selectedDateText" Width="150" TextAlignment="Center"/>
            <ListBox Name="lstNames" Height="200" Width="150"/>
        </StackPanel>
    </GroupBox>
</UserControl>
